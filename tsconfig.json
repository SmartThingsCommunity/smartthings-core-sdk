{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["es2020", "DOM"],
		"target": "es6",
		"strict": true,
		"declaration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declarationMap": true,
		"outDir": "./dist",
	},
	"include": [
		"./global.d.ts",
		"./src/**/*.ts",
	],
}
